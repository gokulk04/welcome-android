
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@android:color/white"
    android:paddingTop="16dp"
    android:layout_height="fill_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMyStuffPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mdblogo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/imgMyStuffPic"
        android:textSize="17.5sp"
        android:id="@+id/txtMyStuffName"
        android:padding="16dp"
        android:textColor="#262626"
        android:gravity="center_horizontal"
        android:text="Gokul Kumarresen"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text= "My Organizations"
        android:id="@+id/txtMyOrganizations"
        android:padding="16dp"
        android:background="#E0E0E0"
        android:textSize="15sp"
        android:textColor="#262626"
        android:layout_below="@+id/txtMyStuffName"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerOrgs"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/txtMyOrganizations"
        android:layout_height="300dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:text= "My Events"
        android:padding="16dp"
        android:id="@+id/txtMyEvents"
        android:background="#E0E0E0"
        android:textSize="15sp"
        android:textColor="#262626"
        android:layout_below="@+id/recyclerOrgs"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerEvents"
        android:layout_below="@+id/txtMyEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>

