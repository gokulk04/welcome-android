<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="1dp"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:padding="16dp"
       android:background="@android:color/white"
       android:id="@+id/llOrgInfo"
       android:layout_height="wrap_content">

         <de.hdodenhof.circleimageview.CircleImageView
             android:layout_width="50dp"
             android:layout_marginRight = "8dp"
             android:id="@+id/imgOrgLogo"
             android:layout_gravity="center_vertical"
             android:src="@drawable/mdblogo"
             android:layout_height="50dp" />

         <TextView
             android:layout_width="wrap_content"
             android:textSize="17.5sp"
             android:layout_marginLeft="8dp"
             android:gravity="center_vertical"
             android:layout_gravity="center_vertical"
             android:text="Mobile Developers of Berkeley"
             android:textColor="#262626"
             android:layout_height="wrap_content" />

   </LinearLayout>

   <ImageView
      android:layout_width="match_parent"
      android:id="@+id/imgEvent"
       android:layout_below="@+id/llOrgInfo"
      android:scaleType="centerCrop"
      android:src="@mipmap/p1"
       android:layout_height="350dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/imgEvent"
        android:padding="16dp"
        android:background="@android:color/white"
        android:id="@+id/llEventDetails"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="Mobile App Hackathon"
            android:textStyle="bold"
            android:textColor="#262626"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="A very brief description about the event."
            android:textColor="#262626"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>